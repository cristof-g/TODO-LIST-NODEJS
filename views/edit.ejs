<%- include('partials/header') %>

<div class="container">
    <div class="row">
        <div class="col-md-5 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <form action="/update/<%= task._id %>" method="POST">
                        <div class="form-group">
                            <input type="text" name="title" class="form-control" placeholder="Insert a Title" value="<%= task.title %>">
                        </div>
                        <div class="form-group">
                            <textarea name="description" cols="30"  class="form-control" placeholder="Insert a description"><%= task.description %></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">
                            Edit task
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>